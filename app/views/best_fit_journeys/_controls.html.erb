<div class="row">
  <%= form_with url: '#', class: "col s8" do |form| %>
    <div class="row">
      <div class="input-field col s3">
        <input
            placeholder="<%= t :from %>"
            data-bfj-target="fromtext"
            id="from"
            type="text"
            value="<%= @from.to_s %>"
            >
      </div>
      <div class="input-field col s3">
        <input
            placeholder="<%= t :to %>"
            data-bfj-target="totext"
            id="to"
            type="text"
            value="<%= @to.to_s %>"
            >
      </div>
      <div class="col s6 valign-wrapper">
        <a href="#" class="waves-effect waves-light btn-small view-changer" data-action="click->bfj#clearJourney"><i class="material-icons">clear</i></a>

        <% search_disabled = (@from.nil? || @to.nil?) ? "disabled" : "" %>

        <a href="#"
           data-action="click->bfj#search"
           data-bfj-target="search"
           class="<%= search_disabled %> waves-effect waves-light btn-small"
           >
           <i class="material-icons">search</i>
        </a>
      </div>

    </div>
  <% end %>
</div>
