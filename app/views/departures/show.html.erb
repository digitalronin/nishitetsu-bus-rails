<h3 class="valign-wrapper departures">
  <%= @from.display_name %>
  &nbsp; <i class="material-icons">arrow_forward</i> &nbsp;
  <%= @to.display_name %>
  &nbsp;
  <a href="<%= departures_url(@to, @from) %>" data-turbo="false" class="valign-wrapper departures">
    <i class="material-icons">swap_horiz</i>
  </a>
</h3>

<%= turbo_frame_tag "departures" do %>
  <ul class="collection with-header">
    <li class="collection-header">
      <div class="row valign-wrapper">
        <div class="col s2">in (min.)</div>
        <div class="col s7">
          <% if @express_only %>
            <%= link_to t(:slow_and_fast),
              departures_url(@from, @to, express_only: "no"),
              data: { turbo: { frame: "departures" } },
              class: "waves-effect waves-teal btn-flat"
            %>
        <% else %>
          <%= link_to t(:express_only),
            departures_url(@from, @to, express_only: "yes"),
            data: { turbo: { frame: "departures" } },
            class: "waves-effect waves-teal btn-flat"
          %>
      <% end %>
        </div>
        <div class="col s1">Should arrive</div>
      </div>
    </li>

    <% @departures.each do |d| %>
      <%= render partial: "departure", locals: { d: d } %>
    <% end %>
  </ul>
<% end %>
